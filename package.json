{
	"name": "event-centers-management-system-backend",
	"version": "1.0.0",
	"description": "REST API for event centers management management application",
	"main": "index.js",
	"scripts": {
		"dev": "cross-env NODE_ENV=development tsnd --respawn --pretty --transpile-only -r tsconfig-paths/register src/server.ts",
		"start": "cross-env NODE_ENV=production node dist/server.js",
		"build": "tsc && tsc-alias",
		"test": "cross-env NODE_ENV=test jest  --detectOpenHandles",
		"test:e2e": "cross-env NODE_ENV=test jest  --testPathPattern=src/tests/e2e",
		"test:unit": "cross-env NODE_ENV=test jest  --testPathPattern=src/tests/unit",
		"test:integration": "cross-env NODE_ENV=development jest  --testPathPattern=src/tests/integration"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"bcrypt": "^5.1.1",
		"bcryptjs": "^3.0.2",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"helmet": "^8.0.0",
		"http-status-codes": "^2.3.0",
		"jsonwebtoken": "^9.0.2",
		"mongodb-memory-server": "^10.1.4",
		"mongoose": "^8.11.0",
		"morgan": "^1.10.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@types/bcryptjs": "^2.4.6",
		"@types/cookie-parser": "^1.4.8",
		"@types/cors": "^2.8.17",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/mongoose": "^5.11.96",
		"@types/morgan": "^1.9.9",
		"@types/supertest": "^6.0.2",
		"jest": "^29.7.0",
		"mockingoose": "^2.16.2",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.6",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.11",
		"tsconfig-paths": "^4.2.0",
		"tsconfig-paths-jest": "^0.0.1",
		"typescript": "^5.8.2"
	}
}
